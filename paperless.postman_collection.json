{
	"info": {
		"_postman_id": "5632d6b7-ade9-4812-8634-fdc97bdb6983",
		"name": "paperless",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "31055451"
	},
	"item": [
		{
			"name": "Upload Document",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const baseUrl = pm.variables.get(\"baseURL\");",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Document is uploaded (more documents are stored compared to pre-request fetch)\", function () {",
							"    pm.sendRequest(`${baseUrl}/api/documents`, function (err, response) {",
							"        const data = response.json();",
							"        const countBefore = pm.collectionVariables.get(\"document_count\");",
							"        pm.expect(countBefore < data.count, \"Count did not increase\")",
							"        ",
							"    })",
							"});",
							"",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const baseURL = pm.variables.get(\"baseURL\");",
							"",
							"// this stores the current count of documents inside a variable,",
							"// so we can test if another document was successfully stored inside the",
							"// database.",
							"",
							"pm.sendRequest(`${baseURL}/api/documents`, function (err, response) {",
							"    const data = response.json();",
							"",
							"    // store count in variable",
							"    pm.collectionVariables.set(\"document_count\", data.count);",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "document",
							"type": "file",
							"src": "/Users/leonardstruck/Coding/WS23-SWKOM/SWKOM-paperless.ServiceAgents.Tests/TEST.pdf"
						},
						{
							"key": "title",
							"value": "TEST_TITLE",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseURL}}/api/documents/post_document",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"api",
						"documents",
						"post_document"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "document_count",
			"value": ""
		}
	]
}